<div class="row">
    <div class="col-md-12">
        <h2>
            Employees
            <a href="/departments/add" class="btn btn-success pull-right">Add New Department</a>
            </h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <td>Department Number</td>
                        <td>Department Name</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each departments}}
                        <tr>
                            <td><a href="/employees?department={{this.departmentId}}">{{departmentId}}</a></td>
                            <td><a href="/department/{{this.departmentId}}">{{departmentName}}</a></td>
                            <td><a class="btn btn-danger" href="/department/delete/{{this.departmentId}}">Remove</a></td>
                        </tr>
                    {{else}}
                            <tr>
                            <td colspan="4">No Data Available</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>